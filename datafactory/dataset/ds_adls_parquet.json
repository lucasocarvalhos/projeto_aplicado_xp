{
	"name": "ds_adls_parquet",
	"properties": {
		"linkedServiceName": {
			"referenceName": "ls_adls",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"p_sistema": {
				"type": "string"
			},
			"p_container": {
				"type": "string"
			},
			"p_tabela": {
				"type": "string"
			}
		},
		"annotations": [],
		"type": "Parquet",
		"typeProperties": {
			"location": {
				"type": "AzureBlobFSLocation",
				"fileName": {
					"value": "@concat(\n    dataset().p_tabela,\n    '_',\n    formatDateTime(utcNow(), 'yyyyMMdd'),\n    '.parquet'\n)",
					"type": "Expression"
				},
				"folderPath": {
					"value": "@concat(\r\n    dataset().p_sistema, \r\n    '/',\r\n    formatDateTime(utcNow(), 'yyyy/MM/dd')\r\n)",
					"type": "Expression"
				},
				"fileSystem": {
					"value": "@dataset().p_container",
					"type": "Expression"
				}
			},
			"compressionCodec": "snappy"
		},
		"schema": []
	}
}